{
  "name": "coderdojochi",
  "scripts": {
    "postdeploy": "export HOST_NAME_1=${HEROKU_APP_NAME};"
  },
  "env": {
    "HEROKU_APP_NAME": {
      "required": true
    },
    "HEROKU_PARENT_APP_NAME": {
      "required": true
    },
    "DEBUG": {
      "required": true
    },
    "ENABLE_DEV_FIXTURES": {
      "required": true
    },
    "SECRET_KEY": {
      "required": true
    },
    "CONTACT_EMAIL": {
      "required": true
    },
    "DEFAULT_FROM_EMAIL": {
      "required": true
    },
    "MANDRILL_API_KEY": {
      "required": true
    },
    "MANDRILL_WEBHOOK_KEY": {
      "required": true
    },
    "MANDRILL_WEBHOOK_URL": {
      "required": true
    },
    "PAYPAL_RECEIVER_EMAIL": {
      "required": true
    },
    "PAYPAL_BUSINESS_ID": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}
