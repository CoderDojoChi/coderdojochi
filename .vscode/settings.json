{
  "editor.trimAutoWhitespace": true,
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/*.pyc": true,
    "**/__pycache__": true,
    "staticfiles": true
  },
  "files.associations": {
    "**/templates/*.html": "django-html",
    "**/templates/*": "django-txt",
    "**/requirements{/**,*}.{txt,in}": "pip-requirements"
  },
  "emmet.includeLanguages": {
    "django-html": "html"
  },
  "python.linting.ignorePatterns": [
    ".vscode/*.py",
    "**/site-packages/**/*.py",
    "**/migrations/**"
  ],
  "python.sortImports.args": ["--settings-path=${workspaceFolder}/setup.cfg"],
  "python.linting.enabled": true,
  "python.linting.pycodestyleEnabled": false,
  "python.linting.pycodestylePath": "pycodestyle",
  "python.linting.pycodestyleArgs": ["--max-line-length=120"],
  "python.linting.pylintEnabled": true,
  "python.linting.pylintArgs": [
    "--max-line-length=120",
    "--disable=C0111", // missing docstring
    "--enable=W0611", // Used when an imported module or variable is not used.
    "--enable=W0614", // Used when an imported module or variable is not used from a 'from X import *' style import.
    "--load-plugins=pylint_django"
  ],
  "[python]": {
    "editor.rulers": [120],
    "editor.codeActionsOnSave": {
      // it was `"source.organizeImports": true` in my first version of this post,
      // see below comment for explanation.
      "source.organizeImports.python": true
    }
  },

  "[git-commit]": {
    "editor.rulers": [72]
  },
  "[json]": {
    "editor.quickSuggestions": {
      "strings": true
    }
  },
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": false,
    "editor.trimAutoWhitespace": false
  }
}
